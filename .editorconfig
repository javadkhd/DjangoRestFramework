# .editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# --- Python files (backend) ---
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# --- JavaScript / TypeScript / React files (frontend) ---
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single

# --- JSON / YAML ---
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# --- HTML / CSS / SCSS ---
[*.{html,css,scss}]
indent_style = space
indent_size = 2

# --- Markdown ---
[*.md]
trim_trailing_whitespace = false

# --- Dockerfiles & Config ---
[Dockerfile*]
indent_style = space
indent_size = 4
